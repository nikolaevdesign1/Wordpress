<?php
    $args = array(
        'post_type' => '',
        'posts_per_page' => 4
    );
    $loop = new WP_Query($args);
    while($loop->have_posts()) : $loop->the_post();
		$post_ID = get_the_ID() ?>
			<a href = "<?php echo get_permalink();?>">
        <?php echo get_the_post_thumbnail()?>
        <?php the_title('');?>
        <?php the_content('');?>
      </a>
						
                       	
<?php 
endwhile;
wp_reset_postdata();
?>
			

